{
  "name": "eris-db",
  "version": "0.15.0",
  "main": "./index.js",
  "dependencies": {
    "ws": "^1.1.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "bluebird": "^3.3.5",
    "bundle-dependencies": "^1.0.2",
    "istanbul": "^0.4.3",
    "lodash": "^4.11.1",
    "mocha": "^2.4.5",
    "mocha-circleci-reporter": "0.0.1",
    "publish": "^0.6.0",
    "solc": "^0.2.2-2",
    "untildify": "^2.1.0"
  },
  "scripts": {
    "predoc": "rm -rf doc",
    "doc": "jsdoc --configure 'JSDoc configuration.json' --template node_modules/ink-docstrap/template index.js lib/*.js lib/rpc/*.js README.md --destination doc",
    "test": "npm run unit && npm run integration",
    "unit": "istanbul cover _mocha -- --reporter mocha-circleci-reporter",
    "integration": "ERIS_PULL_APPROVE=true eris services start keys && ([ -d ~/.eris/chains/blockchain ] || eris chains make blockchain --chain-type=simplechain) && istanbul cover _mocha -- --reporter mocha-circleci-reporter test/integration/test",
    "posttest": "istanbul check-coverage",
    "publish": "bundle-dependencies update && publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eris-ltd/eris-db.js"
  },
  "homepage": "https://github.com/eris-ltd/eris-db.js",
  "bugs": {
    "url": "https://github.com/eris-ltd/eris-db.js/issues"
  },
  "keywords": [
    "eris",
    "erisdb",
    "javascript",
    "node.js",
    "API",
    "RPC"
  ],
  "author": "AndreasEris",
  "authors": [
    {
      "name": "Andreas Olofsson",
      "email": "andreas@erisindustries.com",
      "url": "http://erisindustries.com"
    }
  ],
  "license": "GPL-3.0"
}
